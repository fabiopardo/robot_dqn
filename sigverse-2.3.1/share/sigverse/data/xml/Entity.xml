<?xml version="1.0" encoding="utf8"?>

<define-class name="Entity">

<!-- <attr name="name" type="string"/> -->
<attr name="name" type="string" group="general"/>
<attr name="class" type="string" group="general"/>
<attr name="superclass" type="string" group="general"/>
<attr name="agent" type="bool" group="general" value="false"/>

<attr name="dynamics" type="bool" group="simulation" value="true"/>
<attr name="mass" type="double" group="simulation" value="1.0"/>

<!-- position -->
<attr name="x" type="double" group="pos"/>
<attr name="y" type="double" group="pos"/>
<attr name="z" type="double" group="pos"/>

<!-- position -->
<attr name="fx" type="double" group="force"/>
<attr name="fy" type="double" group="force"/>
<attr name="fz" type="double" group="force"/>

<!-- velocity-->
<attr name="vx" type="double" group="vel"/>
<attr name="vy" type="double" group="vel"/>
<attr name="vz" type="double" group="vel"/>

<!-- angular velocity-->
<attr name="avx" type="double" group="avel"/>
<attr name="avy" type="double" group="avel"/>
<attr name="avz" type="double" group="avel"/>

<!-- acceleration -->
<!--
<attr name="ax" type="double" group="accel"/>
<attr name="ay" type="double" group="accel"/>
<attr name="az" type="double" group="accel"/>
-->

<!-- destination -->
<!--
<attr name="dx" type="double" hidden="true" group="dest"/>
<attr name="dy" type="double" hidden="true" group="dest"/>
<attr name="dz" type="double" hidden="true" group="dest"/>
-->

<attr name="qw" type="double" group="rot" value="1.0"/>
<attr name="qx" type="double" group="rot" value="0.0"/>
<attr name="qy" type="double" group="rot" value="0.0"/>
<attr name="qz" type="double" group="rot" value="0.0"/>

<attr name="tqx" type="double" group="torque" value="0.0"/>
<attr name="tqy" type="double" group="torque" value="0.0"/>
<attr name="tqz" type="double" group="torque" value="0.0"/>

<!--
<attr name="roll" type="double" group="rot"/>
<attr name="pitch" type="double" group="rot"/>
<attr name="yaw" type="double" group="rot"/>
-->

<!-- scale -->

<attr name="scalex" type="double" group="scale" value="1.0"/>
<attr name="scaley" type="double" group="scale" value="1.0"/>
<attr name="scalez" type="double" group="scale" value="1.0"/>

<attr name="x3dCenterOfMass" type="bool" group="x3d" value="false"/>
<attr name="visStateAttrName" type="string" group="visState" value="visual"/>

<attr name="collision" type="bool" group="collision" value="false"/>
<attr name="graspable" type="bool" group="graspable" value="true"/>

<attr name="graspRadius" type="double" group="graspRadius" value="40.0"/>

</define-class>
