<?xml version="1.0" encoding="utf8"?>

<define-class name="Agent" inherit="Entity.xml">

<attr name="language" type="string" group="model"/>
<attr name="implementation" type="string" group="model"/>

   <!-- view point(agent coordinate) -->
<attr name="vpx" type="double" group="viewpoint" value="0.0"/>
<attr name="vpy" type="double" group="viewpoint" value="0.0"/>
<attr name="vpz" type="double" group="viewpoint" value="0.0"/>

   <!-- view vector(view coordinate) -->
<attr name="vvx" type="double" group="viewvector" value="0.0"/>
<attr name="vvy" type="double" group="viewvector" value="0.0"/>
<attr name="vvz" type="double" group="viewvector" value="1.0"/>

   <!-- left-eye point(agent coordinate) -->
<attr name="lepx" type="double" group="lefteyepoint" value="1.0"/>
<attr name="lepy" type="double" group="lefteyepoint" value="2.0"/>
<attr name="lepz" type="double" group="lefteyepoint" value="0.0"/>

   <!-- left-eye vector(view coordinate) -->
<attr name="levx" type="double" group="lefteyevector" value="0.0"/>
<attr name="levy" type="double" group="lefteyevector" value="0.0"/>
<attr name="levz" type="double" group="lefteyevector" value="-1.0"/>

   <!-- right-eye point(agent coordinate) -->
<attr name="repx" type="double" group="righteyepoint" value="-1.0"/>
<attr name="repy" type="double" group="righteyepoint" value="2.0"/>
<attr name="repz" type="double" group="righteyepoint" value="0.0"/>

   <!-- right-eye vector(view coordinate) -->
<attr name="revx" type="double" group="righteyevector" value="0.0"/>
<attr name="revy" type="double" group="righteyevector" value="0.0"/>
<attr name="revz" type="double" group="righteyevector" value="-1.0"/>

   <!-- added by yahara@tome (2011/02/14)-->
   <!-- camera1 attachment(link name) -->
<attr name="elnk1" type="string" group="camera" value="NoCam"/>

   <!-- camera1 point(subcamera coordinate) -->
<attr name="epx1" type="double" group="camera1point" value="0.0"/>
<attr name="epy1" type="double" group="camera1point" value="0.0"/>
<attr name="epz1" type="double" group="camera1point" value="10.0"/>

   <!-- camera1 vector(view coordinate) -->
<attr name="evx1" type="double" group="camera1vector" value="0.0"/>
<attr name="evy1" type="double" group="camera1vector" value="0.0"/>
<attr name="evz1" type="double" group="camera1vector" value="1.0"/>

<attr name="elnk2" type="string" group="camera" value="NoCam"/>

   <!-- camera2 point(subcamera coordinate) -->
<attr name="epx2" type="double" group="camera2point" value="0.0"/>
<attr name="epy2" type="double" group="camera2point" value="0.0"/>
<attr name="epz2" type="double" group="camera2point" value="0.0"/>

   <!-- camera2 vector(view coordinate) -->
<attr name="evx2" type="double" group="camera2vector" value="0.0"/>
<attr name="evy2" type="double" group="camera2vector" value="0.0"/>
<attr name="evz2" type="double" group="camera2vector" value="1.0"/>


   <!-- field of view -->
<attr name="FOV" type="double" group="fieldofview" value="45.0"/>
<attr name="aspectRatio" type="double" group="fieldofview" value="1.5"/>

  <!-- voice reach radius -->
<attr name="voiceReachRadius" type="double" group="voice" value="5.0"/>
<attr name="voiceReachRadiusEnable" type="bool" group="voice" value="true"/>


<set-attr-value name="agent" value="true"/>

